<h1>Lista de Usuario</h1>
<% if (mensaje.length > 0) { %>
    <div class="alert alert-success"><%= mensaje %></div>
<% } %>  

<a href="/admin/usuario/nuevo" class="btn btn-success">Nuevo Usuario</a>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>USUARIO</th>
            <th>CORREO</th>
            <th>ESTADO</th>
            <th>ACCIONES</th>
        </tr>
    </thead>
    <tbody>
        <% datos.forEach(function(usuario){ %>
     
        <tr>
            <td><%- usuario.id %></td>
            <td><%- usuario.username %></td>
            <td><%- usuario.email %></td>
            <td><%- usuario.estado %></td>
            <td>
                <a href="/admin/usuario/<%-usuario.id%>/editar" class="btn btn-warning">Editar</a>
                                <!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#eliminarModal<%- usuario.id %>">
    eliminar
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="eliminarModal<%- usuario.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Eliminar</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/admin/usuario/<%- usuario.id %>/eliminar" method="post">
        <div class="modal-body">
          ¿Está seguro de Eliminar a <%- usuario.email %>?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-danger">Eliminar</button>
        </div>
      </form>
      </div>
    </div>
  </div>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>